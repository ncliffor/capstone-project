<div class="dive_site_show">
  <div class="dive_site_info">
    <%= render @dive_site %>
  </div>

  <div class="edit_site">
    <%= link_to "Edit Site Info", edit_dive_site_path %><br />

    <% if signed_in? && current_user.admin? %>
      <%= link_to "Delete Site", dive_site_path, method: :delete %>
    <% end %>
  <div>

  <div id="dive-carousel">
    <%= render collection: @images, partial: "dive_sites/image" %>
  </div>

  <% if signed_in? %>
    <%= render "images/form", image: @image %>
  <% end %>
</div>
