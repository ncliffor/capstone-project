<div class="user_show">
  <h1>This is the profile for <%= current_user.email %></h1>

  <div class="profile-pic">
    <% if @user.image_url? %>
      <%= image_tag @user.image_url %><br/ >
    <% else %>
        <p>Add a profile picture</p>

        <%= form_for @user do |form| %>
          <div>
            <%= form.text_field :image_url %>
            <%= form.label :image_url %>
          </div>

          <div>
            <%= form.submit %>
          </div>
        <% end %>
      <% end %>

      <%= link_to "Edit profile", edit_user_path %>

      <%= render "images/form", image: @image %>
  </div>

  <div class="user-images">
    <%= render collection: @images, partial: "dive_sites/image" %>
  </div>
</div>
