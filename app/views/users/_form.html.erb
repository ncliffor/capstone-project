<%= render "error_messages", target: user %>

<%= form_for user do |form| %>

  <div>
    <%= form.label :image_url, "Update your pic:" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :about, "About Me" %>
    <%= form.text_area :about %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
